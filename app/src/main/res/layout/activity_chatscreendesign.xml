<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".chatscreendesign">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilee"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="7dp"
            android:src="@drawable/backgroun" />

        <TextView
            android:id="@+id/namee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="13dp"
            android:text="MY NAME"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_marginLeft="94dp"
            android:paddingTop="13dp"
            android:id="@+id/videoo"
            android:src="@drawable/ic_baseline_video" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="13dp"
            android:id="@+id/call"
            android:src="@drawable/ic_baseline_call_24" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="13dp"
            android:id="@+id/morever"
            android:src="@drawable/ic_baseline_more_vert_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/linear2"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/msgg"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSG"
            android:layout_marginLeft="250dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00PM"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linear3"
        android:background="@drawable/ic_launcher_background"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="32dp"
            android:id="@+id/smilee"
            android:paddingTop="5dp"
            android:src="@drawable/ic_baseline_insert_emoticon_24"
            android:layout_height="32dp"/>
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:id="@+id/typee"
            android:hint="Type Message"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="27dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_baseline_link_24"
            android:id="@+id/pin"
            android:layout_height="33dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:paddingTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="38dp"
            android:id="@+id/mic"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundcorners"
            android:src="@drawable/ic_baseline_mic_none_24"
            android:layout_height="38dp"/>

    </LinearLayout>

</LinearLayout>